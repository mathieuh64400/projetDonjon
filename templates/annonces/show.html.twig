{% extends 'base.html.twig' %}

{% block title %}Annonces
{% endblock %}

{% block body %}
	<div style="display:flex; flex-direction:row; margin-left:50%;">
		<button type="button" class="btn btn-warning">
			<a href="{{ path('annonces_index') }}">back to list</a>
            {{ include('annonces/_delete_form.html.twig') }}
		</button>
	</div>


	
	<h2>{{ annonce.title }}</h2>
	<h3>{{ annonce.subtitle }}</h3>
	<div style="display:flex; flex-direction:row;">
		<div style="margin-top:2%;">
			<img src="{{ asset('uploads/' ~ annonce.images[1].name)|imagine_filter('square') }}" alt="image">
			<br>
			<br>
			<img src="{{ asset('uploads/' ~ annonce.images[2].name)|imagine_filter('square') }}" alt="image">
			<br>
            <br>
			<img src="{{ asset('uploads/' ~ annonce.images[3].name)|imagine_filter('square') }}" alt="image">

		</div>
		<div style="margin-left:10%; margin-right:10%; margin-top:2%;">{{ annonce.content }}</div>


	</div>

{% endblock %}
