{% extends 'base.html.twig' %}

{% block title %}Hello SysConnexionController!
{% endblock %}

{% block body %}
	<h2>Gestion des roles</h2>
	<div style="margin-left:10%;margin-right:10%;margin-top:10%;display:flex; flex-direction:column;">
		<table class="table">
			<thead>
				<td>username</td>
				<td>Role</td>
				<td>Actions</td>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{user.username}}</td>
						<td>
							{% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_EDITOR" %}
                                Editeur
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
							{% endfor %}
						</td>
						{# <td>{{user.roles}}</td> #}
						<td>
							<button type="button" class="btn btn-warning">
								
								 <a href="{{ path('admincontrol_utilisateur_modif', {'id': user.id}) }}">Modifier</a>
							</button>
						</td>

					</tr>
				{% else %}
					<tr>
						<td colspan="5">
							Aucun utilisateur</td>
					</tr>
				{% endfor %}
			</tbody>

		</table>
	</div>
{% endblock %}
